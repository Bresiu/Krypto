<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                tools:context=".LoginActivity"
                android:id="@+id/relative">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/tableLayout"
            android:background="@color/newest_first_base">

        <com.bresiu.krypto.utils.widget.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/pass"
                android:gravity="center"
                app:typeface="roboto_condensed"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/newest_light_gray"
                android:text="Enter Your PIN:"
                android:id="@+id/info"/>

        <com.bresiu.krypto.utils.widget.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                app:typeface="roboto_condensed"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/newest_white"
                android:id="@+id/pass"/>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:background="@color/newest_black"
            android:id="@+id/tableLayout">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/newest_orange">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:id="@+id/prog1">
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:id="@+id/prog2">
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:id="@+id/prog3">
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:id="@+id/prog4">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    app:typeface="roboto_light"
                    android:textSize="40sp"
                    android:textColor="@color/newest_orange"
                    android:text="1"
                    android:id="@+id/b1"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    app:typeface="roboto_light"
                    android:textSize="40sp"
                    android:textColor="@color/newest_orange"
                    android:text="2"
                    android:id="@+id/b2"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    app:typeface="roboto_light"
                    android:textSize="40sp"
                    android:textColor="@color/newest_orange"
                    android:text="3"
                    android:id="@+id/b3"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="1dp">

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    app:typeface="roboto_light"
                    android:textSize="40sp"
                    android:textColor="@color/newest_orange"
                    android:text="4"
                    android:id="@+id/b4"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    app:typeface="roboto_light"
                    android:textSize="40sp"
                    android:textColor="@color/newest_orange"
                    android:text="5"
                    android:id="@+id/b5"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    app:typeface="roboto_light"
                    android:textSize="40sp"
                    android:textColor="@color/newest_orange"
                    android:text="6"
                    android:id="@+id/b6"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="1dp">

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    app:typeface="roboto_light"
                    android:textSize="40sp"
                    android:textColor="@color/newest_orange"
                    android:text="7"
                    android:id="@+id/b7"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    app:typeface="roboto_light"
                    android:textSize="40sp"
                    android:textColor="@color/newest_orange"
                    android:text="8"
                    android:id="@+id/b8"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    app:typeface="roboto_light"
                    android:textSize="40sp"
                    android:textColor="@color/newest_orange"
                    android:text="9"
                    android:id="@+id/b9"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="1dp">

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    app:typeface="roboto_light"
                    android:textSize="40sp"
                    android:textColor="@color/blue"
                    android:text="c"
                    android:id="@+id/cancel"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    app:typeface="roboto_light"
                    android:textSize="40sp"
                    android:textColor="@color/newest_orange"
                    android:text="0"
                    android:id="@+id/b0"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    app:typeface="roboto_light"
                    android:textSize="40sp"
                    android:textColor="@color/blue"
                    android:text="@string/lower_than"
                    android:id="@+id/back"/>
        </LinearLayout>
    </LinearLayout>

    <com.bresiu.krypto.utils.SlidingLayer
            xmlns:slidingLayer="http://schemas.android.com/apk/res/com.bresiu.krypto"
            android:id="@+id/slidingLayer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            slidingLayer:shadowDrawable="@drawable/sidebar_shadow"
            slidingLayer:shadowWidth="3dp"
            slidingLayer:stickTo="top"
            slidingLayer:closeOnTapEnabled="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:background="@color/newest_gray">

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:padding="10dp"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    app:typeface="roboto_light"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/newest_orange"
                    android:text="Delete Your Account"
                    android:id="@+id/delete_button"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/delete_button"
                    android:layout_alignParentLeft="true"
                    android:layout_alignRight="@+id/delete_button"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:padding="10dp"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    app:typeface="roboto_light"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/newest_orange"
                    android:text="Licenses"
                    android:id="@+id/licences"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/licences"
                    android:layout_alignParentLeft="true"
                    android:layout_alignRight="@+id/delete_button"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:padding="10dp"
                    android:background="@drawable/button"
                    android:onClick="onClick"
                    app:typeface="roboto_light"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/newest_orange"
                    android:text="About"
                    android:id="@+id/about"/>

            <com.bresiu.krypto.utils.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    app:typeface="roboto_light"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/newest_white"
                    android:text="menu"
                    android:id="@+id/menu"/>

            <com.bresiu.krypto.utils.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:typeface="roboto_light"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/newest_white"
                    android:id="@+id/last_logged_in"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"/>

        </RelativeLayout>

    </com.bresiu.krypto.utils.SlidingLayer>

</RelativeLayout><!-- From: file:/home/bresiu/android-studio/android-workspace/KryptoProject/Krypto/src/main/res/layout/activity_login.xml -->