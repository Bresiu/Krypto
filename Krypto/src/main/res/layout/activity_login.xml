<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/new_background"
                tools:context=".LoginActivity">

    <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/logo"
            android:src="@drawable/ic_launcher"/>


    <com.bresiu.krypto.utils.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/logo"
            android:layout_toRightOf="@+id/logo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            app:typeface="roboto_thin"
            android:text="@string/app_name"
            android:textColor="@color/new_orange"
            android:id="@+id/app_name"/>

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/new_orange"
                    android:background="@color/new_dark_gray"
                    android:id="@+id/b1"
                    android:text="1"/>

            <com.bresiu.krypto.utils.widget.RobotoButton

                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/new_orange"
                    android:background="@color/new_dark_gray"
                    android:id="@+id/b2"
                    android:text="2"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/new_orange"
                    android:background="@color/new_dark_gray"
                    android:id="@+id/b3"
                    android:text="3"/>
        </TableRow>

        <LinearLayout
                android:layout_height="1dp"
                android:background="@color/new_light_gray">
        </LinearLayout>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/new_orange"
                    android:background="@color/new_dark_gray"
                    android:id="@+id/b4"
                    android:text="4"/>

            <com.bresiu.krypto.utils.widget.RobotoButton

                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/new_orange"
                    android:background="@color/new_dark_gray"
                    android:id="@+id/b5"
                    android:text="5"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/new_orange"
                    android:background="@color/new_dark_gray"
                    android:id="@+id/b6"
                    android:text="6"/>
        </TableRow>

        <LinearLayout
                android:layout_height="1dp"
                android:background="@color/new_light_gray">
        </LinearLayout>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/new_orange"
                    android:background="@color/new_dark_gray"
                    android:id="@+id/b7"
                    android:text="7"/>

            <com.bresiu.krypto.utils.widget.RobotoButton

                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/new_orange"
                    android:background="@color/new_dark_gray"
                    android:id="@+id/b8"
                    android:text="8"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/new_orange"
                    android:background="@color/new_dark_gray"
                    android:id="@+id/b9"
                    android:text="9"/>
        </TableRow>

        <LinearLayout
                android:layout_height="1dp"
                android:background="@color/new_light_gray">
        </LinearLayout>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/new_orange"
                    android:background="@color/new_dark_gray"
                    android:id="@+id/box"/>

            <com.bresiu.krypto.utils.widget.RobotoButton

                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/new_orange"
                    android:background="@color/new_dark_gray"
                    android:id="@+id/b0"
                    android:text="0"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/new_orange"
                    android:background="@color/new_dark_gray"
                    android:id="@+id/back"
                    android:text="@string/lower_than"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
