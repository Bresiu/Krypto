<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/newest_first_base"
                tools:context=".LoginActivity">

    <!--Move logo and app name to action bar?-->
    <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/logo"
            android:src="@drawable/ic_launcher"/>

    <com.bresiu.krypto.utils.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/logo"
            android:layout_toRightOf="@+id/logo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            app:typeface="roboto_thin"
            android:text="@string/app_name"
            android:textColor="@color/newest_white"
            android:id="@+id/app_name"/>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/prog"
            android:layout_below="@+id/logo">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal|center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true">

            <com.bresiu.krypto.utils.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    app:typeface="roboto_condensed"
                    android:text="Enter Your PIN:"
                    android:textColor="@color/newest_light_gray"
                    android:id="@+id/info"/>

            <com.bresiu.krypto.utils.widget.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    app:typeface="roboto_condensed"
                    android:textColor="@color/newest_white"
                    android:id="@+id/pass"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tableLayout"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:id="@+id/prog"
            android:background="@color/newest_orange">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/prog1">
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/prog2">
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/prog3">
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/prog4">
        </LinearLayout>
    </LinearLayout>

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tableLayout">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:height="0px"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/newest_orange"
                    android:background="@drawable/button"
                    android:id="@+id/b1"
                    android:text="1"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:height="0px"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/newest_orange"
                    android:background="@drawable/button"
                    android:id="@+id/b2"
                    android:text="2"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:height="0px"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/newest_orange"
                    android:background="@drawable/button"
                    android:id="@+id/b3"
                    android:text="3"/>
        </TableRow>

        <LinearLayout
                android:layout_height="1dp"
                android:background="@color/newest_black">
        </LinearLayout>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:height="0px"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/newest_orange"
                    android:background="@drawable/button"
                    android:id="@+id/b4"
                    android:text="4"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:height="0px"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/newest_orange"
                    android:background="@drawable/button"
                    android:id="@+id/b5"
                    android:text="5"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:height="0px"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/newest_orange"
                    android:background="@drawable/button"
                    android:id="@+id/b6"
                    android:text="6"/>
        </TableRow>

        <LinearLayout
                android:layout_height="1dp"
                android:background="@color/newest_black">
        </LinearLayout>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:height="0px"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/newest_orange"
                    android:background="@drawable/button"
                    android:id="@+id/b7"
                    android:text="7"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:height="0px"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/newest_orange"
                    android:background="@drawable/button"
                    android:id="@+id/b8"
                    android:text="8"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:height="0px"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/newest_orange"
                    android:background="@drawable/button"
                    android:id="@+id/b9"
                    android:text="9"/>
        </TableRow>

        <LinearLayout
                android:layout_height="1dp"
                android:background="@color/newest_black">
        </LinearLayout>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:height="0px"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/blue"
                    android:background="@drawable/button"
                    android:id="@+id/cancel"
                    android:text="c"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:height="0px"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/newest_orange"
                    android:background="@drawable/button"
                    android:id="@+id/b0"
                    android:text="0"/>

            <com.bresiu.krypto.utils.widget.RobotoButton
                    android:layout_weight="1"
                    android:height="0px"
                    android:onClick="onClick"
                    android:textSize="40sp"
                    app:typeface="roboto_light"
                    android:textColor="@color/blue"
                    android:background="@drawable/button"
                    android:id="@+id/back"
                    android:text="@string/lower_than"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>