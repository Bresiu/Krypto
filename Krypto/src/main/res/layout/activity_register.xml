<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".RegisterActivity">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="1"
            android:id="@+id/b1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="2"
            android:id="@+id/b2"
            android:layout_alignTop="@+id/b1"
            android:layout_toRightOf="@+id/b1"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="3"
            android:id="@+id/b3"
            android:layout_alignTop="@+id/b2"
            android:layout_toRightOf="@+id/b2"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="4"
            android:id="@+id/b4"
            android:layout_below="@+id/b1"
            android:layout_alignLeft="@+id/b1"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="5"
            android:id="@+id/b5"
            android:layout_below="@+id/b2"
            android:layout_alignLeft="@+id/b2"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="6"
            android:id="@+id/b6"
            android:layout_below="@+id/b2"
            android:layout_toRightOf="@+id/b2"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="7"
            android:id="@+id/b7"
            android:layout_alignTop="@+id/b8"
            android:layout_toLeftOf="@+id/b8"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="8"
            android:id="@+id/b8"
            android:layout_alignTop="@+id/b9"
            android:layout_toLeftOf="@+id/b9"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="9"
            android:id="@+id/b9"
            android:layout_below="@+id/b5"
            android:layout_toRightOf="@+id/b5"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="0"
            android:id="@+id/b0"
            android:layout_below="@+id/b8"
            android:layout_toRightOf="@+id/b7"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/pass"
            android:gravity="center"
            android:layout_below="@+id/b0"
            android:layout_alignLeft="@+id/b7"
            android:layout_alignRight="@+id/b9"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Przegryw, jesteÅ› tu po raz pierwszy. Ustal Koda"
            android:id="@+id/info"
            android:layout_above="@+id/logo"
            android:layout_centerHorizontal="true"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:src="@drawable/web_hi_res_512"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>

</RelativeLayout>
